{
    "private": true,
    "type": "module",
    "scripts": {
        "build": "pnpm run build:firefox",
        "build:firefox": "vite build --mode firefox",
        "build:chromium": "vite build --mode chromium",
        "debug": "pnpm run debug:firefox",
        "debug:firefox": "pnpm run build:firefox --watch",
        "debug:chromium": "pnpm run build:chromium --watch",
        "lint": "pnpm run lint:tsc & pnpm run lint:eslint & pnpm run lint:stylelint & pnpm run lint:prettier",
        "lint:tsc": "vue-tsc --noEmit",
        "lint:eslint": "eslint .",
        "lint:stylelint": "stylelint **/*.{css,vue}",
        "lint:prettier": "prettier --check **/*.css",
        "format": "pnpm run format:eslint & pnpm run format:stylelint & pnpm run format:prettier",
        "format:eslint": "eslint --fix .",
        "format:stylelint": "stylelint --fix **/*.{css,vue}",
        "format:prettier": "prettier --write **/*.css"
    },
    "dependencies": {
        "bootstrap-icons": "^1.13.1",
        "pinia": "^3.0.4",
        "solid-js": "^1.9.10",
        "vue": "^3.5.25"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.1",
        "@stylistic/eslint-plugin": "^5.6.1",
        "@types/chrome": "^0.1.32",
        "@types/node": "^24.10.1",
        "@types/webextension-polyfill": "^0.12.4",
        "@unocss/eslint-plugin": "^66.5.10",
        "@vitejs/plugin-vue": "^6.0.2",
        "crx": "^5.0.1",
        "dotenv": "^17.2.3",
        "eslint": "^9.39.1",
        "eslint-import-resolver-typescript": "^4.4.4",
        "eslint-plugin-import-x": "^4.16.1",
        "eslint-plugin-solid": "^0.14.5",
        "eslint-plugin-unused-imports": "^4.3.0",
        "eslint-plugin-vue": "^10.6.2",
        "globals": "^16.5.0",
        "lightningcss": "1.30.1",
        "postcss": "^8.5.6",
        "prettier": "^3.7.4",
        "stylelint": "^16.26.1",
        "stylelint-config-recess-order": "^7.4.0",
        "stylelint-config-recommended-vue": "^1.6.1",
        "stylelint-config-standard": "^39.0.1",
        "stylelint-order": "^7.0.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.48.1",
        "unocss": "^66.5.10",
        "vite": "^7.2.6",
        "vite-plugin-solid": "^2.11.10",
        "vite-svg-loader": "^5.1.0",
        "vue-tsc": "^3.1.6",
        "web-ext": "^9.2.0"
    },
    "engines": {
        "node": ">=24.11",
        "pnpm": ">=10"
    }
}
