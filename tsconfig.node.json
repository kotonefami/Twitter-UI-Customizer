{
    "include": ["i18n", "scripts", "*.ts"],
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "lib": ["ESNext", "DOM"],
        "noEmit": true,
        "skipLibCheck": true,
        "types": ["@types/node"],
        "allowImportingTsExtensions": true,
        "erasableSyntaxOnly": true,
        "verbatimModuleSyntax": true
    }
}